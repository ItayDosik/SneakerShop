@model SneakerShop.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        The best offer <br />
                        <span class="text-primary">for your business</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                        quibusdam tempora at cupiditate quis eum maiores libero
                        veritatis? Dicta facilis sint aliquid ipsum atque?
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form action="Register" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline mb-4">
                                    <input type="text" name="UserName" class="form-control" />
                                    <label class="form-label">User name</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>


                                <div class="form-outline mb-4">
                                    <input asp-for="Name" type="text" name="Name" class="form-control" />
                                    <label asp-for="Name" class="form-label">Full name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Password" type="password" name="password" class="form-control" />
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="Password" name="ConfirmPassword" class="form-control" />
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="PhoneNumber" type="text" name="PhoneNumber" class="form-control" />
                                    <label asp-for="PhoneNumber" class="form-label">Phone</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>


                                <div class="form-outline mb-4">
                                    <input asp-for="Email" type="text" name="Email" class="form-control" />
                                    <label asp-for="Email" class="form-label">Email address</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Address" type="text" name="Address" class="form-control" />
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>


                                <!-- Submit button -->
                                <input type="submit" value="Register" class="btn btn-primary btn-block mb-4"/>
                                 

                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
