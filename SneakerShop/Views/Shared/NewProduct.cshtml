@model SneakerShop.Models.Product
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> signInManager;

<style>
    .invalidInput ul {
        list-style: none;
        list-style-type: none;
        padding-left: 0;
        color: red;
    }
</style>

<div class="container d-flex justify-content-center align-items-center">

    <div class="card col-sm-7 align-content-center d-flex">
        <div class="card-header">
            Add New Sneaker
        </div>
        <div class="card-body"> 
            <form action="AddProduct" method="post" class="mt-3">
                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Product Name</label>
                    <div class="col col-sm-8">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Product Description</label>
                    <div class="col col-sm-8">
                        <textarea asp-for="ProductDescription" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Price</label>
                    <div class="col col-sm-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Product Picture URL #1</label>
                    <div class="col col-sm-8">
                        <input asp-for="ProductPictureURL1" class="form-control" />
                        <span asp-validation-for="ProductPictureURL1" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Product Picture URL #2</label>
                    <div class="col col-sm-8">
                        <input asp-for="ProductPictureURL2" class="form-control" />
                        <span asp-validation-for="ProductPictureURL3" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Product Picture URL #3</label>
                    <div class="col col-sm-8">
                        <input asp-for="ProductPictureURL3" class="form-control" />
                        <span asp-validation-for="ProductPictureURL3" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Quantity</label>
                    <div class="col col-sm-8">
                        <input asp-for="Qnt" class="form-control" />
                        <span asp-validation-for="Qnt" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Category</label>
                    <div class="col col-sm-8">
                        <select asp-for="Category" class="form-select">
                            <option value="" selected>Select Category</option>
                            <option value="Jordan">Jordan</option>
                            <option value="NikeSB">NikeSB</option>
                            <option value="Yeezy">Yeezy</option>
                            <option value="Others">Others</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Size</label>
                    <div class="col col-sm-8">
                        <input asp-for="Size" class="form-control" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-form-label col-4">Location</label>
                    <div class="col col-sm-8">
                        <select asp-for="locationInStore" class="form-select">
                            <option value="" selected>Select Location</option>
                            <option value="Aisle 1">Aisle 1</option>
                            <option value="Aisle 2">Aisle 2</option>
                            <option value="Aisle 3">Aisle 3</option>
                            <option value="Aisle 4">Aisle 4</option>
                        </select>
                        <span asp-validation-for="locationInStore" class="text-danger"></span>
                    </div>
                </div>

                <input type="submit" value="Add Sneaker" class="btn btn-primary"/>
            </form>
        </div>
        
    </div>

</div>

  

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}